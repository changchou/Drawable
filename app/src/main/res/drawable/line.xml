<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">

    <solid android:color="#ff00ff" />
    <!--//线性图形 无效属性-->

    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <corners android:radius="10dp" />
    <!--//无效属性-->

    <size
        android:height="20dp" />
    <!--//不用设置width-->

    <stroke
        android:width="8dp"
        android:color="#88000000"
        android:dashGap="4dp"
        android:dashWidth="20dp" />
    <!--//dash...表示虚线-->
</shape>