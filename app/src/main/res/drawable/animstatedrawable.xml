<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/checked"
        android:drawable="@drawable/rect0"
        android:state_checked="true" />

    <item
        android:id="@+id/unchecked"
        android:drawable="@drawable/rect180" />

    <transition
        android:fromId="@id/unchecked"
        android:toId="@id/checked">

        <animation-list>
            <item
                android:drawable="@drawable/rect45"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect90"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect135"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect180"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect225"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect270"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect315"
                android:duration="100" />
            <item
                android:drawable="@drawable/rect0"
                android:duration="100" />
        </animation-list>

    </transition>

</animated-selector>